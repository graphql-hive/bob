{
  "compilerOptions": {
    "module": "commonjs",
    "strictNullChecks": true,
    "target": "es2015",
    "lib": ["esnext"],
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/index.ts", "src/typings.d.ts"]
}
